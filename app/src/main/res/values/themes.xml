<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MindThrive" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo_splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.MindThrive</item>
    </style>

</resources>